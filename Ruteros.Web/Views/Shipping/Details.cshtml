@model Ruteros.Web.Data.Entities.ShippingEntity

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<h2>Details</h2>

<div>
    <h4>Shipping</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Code)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Code)
                </dd>
                <dt>
                    # Shipping Details
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ShippingDetails.Count)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div>
    <a asp-action="CreateDetail" asp-route-id="@Model.Id" class="btn btn-primary">Create Detail</a>
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">ShippingDetails</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                Quantity
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Picture
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ShippingDetails)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                   <img src="@Url.Content(item.PicturePath)" alt="image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                                </td>
                                <td>
                                    <a asp-action="EditDetail" asp-route-id="@item.Id" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
